@model HospitalTeam2.Models.ViewModels.ScheduleEdit

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Schedule/Create" method="post">
            <div class="form-group">
                <label class="control-label">Staff</label>
                <select class="form-control" name="StaffId">
                    @{
                        foreach (var staff in Model.Staffs)
                        {
                            <option value="@(staff.StaffId)">@(staff.StaffFirstName + " " + staff.StaffLastName)</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input class="form-control" type="date" name="Date" />
            </div>
            <div class="form-group">
                <label class="control-label">Start Shift</label>
                <input class="form-control" type="time" name="StartShift" />
            </div>
            <div class="form-group">
                <label class="control-label">End Shift</label>
                <input class="form-control" type="time" name="EndShift" />
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
