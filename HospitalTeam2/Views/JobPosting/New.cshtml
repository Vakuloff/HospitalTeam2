                    }

                    HospitalTitle, JobPostingTitle,Department, JobPostingType, JobPostingDesc, JobPostingReq,  JobApplicationID) values (@location, @title, @department,@type, @desc, @req, @resume)";
                </select>
            </div>
            <div class="form-group">
                <label asp-for="HospitalTitle" class="control-label"></label>
                <select asp-for="HospitalTitle" class="form-control" asp-items="ViewBag.HospitalTitle"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentTitle" class="control-label"></label>
                <select asp-for="DepartmentTitle" class="form-control" asp-items="ViewBag.DepartmentTitle"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input id="JobPostingTitle_New" name="JobPostingTitle_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <input id="JobPostingType_New" name="JobPostingType_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input id="JobPostingDesc_New" name="JobPostingDesc_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Requirements</label>
                <input id="JobPostingReq_New" name="JobPostingReq_New" />
            </div>

            <div class="form-group">
                <label class="control-label">Job Application</label>
                <input id="JobApplicationID_New" name="JobApplicationID_New" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

