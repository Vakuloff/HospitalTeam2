@model IEnumerable<HospitalTeam2.Models.Donor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Name
                </th>
                <th>
                    Message
                </th>
                <th>
                    Image
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DonorName
            </td>
            <td>
                @item.DonorMessage
            </td>
            <td>
                <img src="/images/Donors/@item.ImageUrl" class="imageCell" />

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DonorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DonorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DonorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
