@model HospitalTeam2.Models.ViewModels.StaffEdit

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Staff/Create" method="post">
            <div class="form-group">
                <label class="control-label">First name</label>
                <input class="form-control" type="text" name="StaffFirstName" />
            </div>
            <div class="form-group">
                <label class="control-label">Last name</label>
                <input class="form-control" type="text" name="StaffLastName" />
            </div>
            <div class="form-group">
                <label class="control-label">Doctor Type</label>
                <input class="form-control" type="text" name="TypeDoctor" />
            </div>
            <div class="form-group">
                <label class="control-label">Department</label>
                <select class="form-control" name="DepartmentId">
                    @{
                        foreach (var department in Model.Departments)
                        {
                            <option value="@(department.DepartmentID)">@(department.DepartmentTitle)</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Hospital</label>
                <select class="form-control" name="hospitalid">
                    @{
                        foreach (var hospital in Model.Hospitals)
                        {
                            <option value="@(hospital.HospitalID)">@(hospital.HospitalTitle)</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
