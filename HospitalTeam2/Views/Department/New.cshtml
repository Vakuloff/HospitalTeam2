@model HospitalTeam2.Models.ViewModels.DepartmentEdit

@{
    ViewData["Title"] = "New";
}

<h2>New</h2>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Department/Create" method="post">
            <div class="form-group">
            <label class="control-label">Department Title</label>
            <input class="form-control" type="text" name="DepartmentTitle_New"/>
            </div>
            <div class="form-group">
                <label class="control-label">Hospital Title</label>
                <select class="form-control" name="hospitalid">
                    @{
                        foreach (var hospital in Model.Hospitals)
                        {
                            <option value="@(hospital.HospitalID)">@(hospital.HospitalTitle)</option>
                        }

                    }
                </select>
                </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="submit" />
            </div>
</form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
