@model HospitalTeam2.Models.ViewModels.ContactFormEdit

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ContactForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/ContactForm/Create" method="post">
            <div class="form-group">
                <label class="control-label">Full Name</label>
                <input class="form-control" type="text" name="FullName" />
            </div>
            <div class="form-group">
                <label class="control-label">Phone Number</label>
                <input class="form-control" type="text" name="PhoneNumber" />
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input class="form-control" type="text" name="Email" />
            </div>
            <div class="form-group">
                <label class="control-label">Topic</label>
                <select class="form-control" name="Topic">
                    <option value="General">General</option>
                    <option value="IT">IT problems</option>
                    <option value="Feedback">Feedback</option>
                    <option value="Parking">Parking</option>
                    <option value="Donations">Donations</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Message</label>
                <textarea class="form-control" name="Message"></textarea>
            </div>
            <input class="form-control" type="hidden" name="MessageStatus" value="inProcess" />
            <input class="form-control" type="hidden" name="AdminReply" value="Reply will appears here" />
            <div class="form-group">
                <label class="control-label">Hospital</label>
                <select class="form-control" name="hospitalid">
                    @{
                        foreach (var hospital in Model.Hospitals)
                        {
                            <option value="@(hospital.HospitalID)">@(hospital.HospitalTitle)</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
