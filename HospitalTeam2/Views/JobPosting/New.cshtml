@model HospitalTeam2.Models.ViewModels.JobPostingEdit

@{
    ViewData["Title"] = "New";
}

<h2>New</h2>

<h4>JobPosting</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form method="POST" action="/JobPosting/Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            


            <div class="form-group">
                <label asp-for="Hospitals" class="control-label"></label>
                <select asp-for="Hospitals" class="form-control" asp-items="ViewBag.HospitalTitle"></select>
            </div>
            <div class="form-group">
                <label asp-for="Departments" class="control-label"></label>
                <select asp-for="Departments" class="form-control" asp-items="ViewBag.DepartmentTitle"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input id="JobPostingTitle_New" name="JobPostingTitle_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <input id="JobPostingType_New" name="JobPostingType_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input id="JobPostingDesc_New" name="JobPostingDesc_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Requirements</label>
                <input id="JobPostingReq_New" name="JobPostingReq_New" />
            </div>

            <div class="form-group">
                <label class="control-label">Job Application</label>
                <input id="JobApplicationID_New" name="JobApplicationID_New" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
