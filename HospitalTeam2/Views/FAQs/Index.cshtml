@model IEnumerable<HospitalTeam2.Models.FAQ>

@{
    ViewData["Title"] = "Index";
}
<div class="jumbotron">
    <div class="containerH">
        <h2>FAQ</h2>
    </div>
</div>


<p class="btn btn-primary">
    <a asp-action="Create" style="color:white">Create New</a>
</p>
<div id="paginate">
    @ViewData["PaginationSummary"]
    @Html.ActionLink("Prev",
        "Index",
        new { pagenum= ((int)ViewData["pagenum"]-1)}
        )
    |
    @Html.ActionLink("Next",
        "Index",
        new { pagenum = ((int)ViewData["pagenum"] + 1) }
        )
</div>
<div class="container">
    @foreach (var item in Model)
    {
        <div>
            <div>
                <h3>
                    @Html.DisplayFor(modelItem => item.FaqQues)
                </h3>
                <br/>
            </div>
            <div>
                <p>
                    @Html.DisplayFor(modelItem => item.FaqAns)
                </p>
            </div>
            <p>
                <a asp-action="Edit" asp-route-id="@item.FaqID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FaqID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FaqID">Delete</a>
            </p>
        </div>
    }
    </div>
   
    <div id="paginate">
        @ViewData["PaginationSummary"]
        @Html.ActionLink("Prev",
            "Index",
            new { pagenum= ((int)ViewData["pagenum"]-1)}
            )
        |
        @Html.ActionLink("Next",
            "Index",
            new { pagenum = ((int)ViewData["pagenum"] + 1) }
            )
    </div>
