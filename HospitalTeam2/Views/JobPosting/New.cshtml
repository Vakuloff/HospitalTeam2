@model  HospitalTeam2.Models.ViewModels.JobPostingEdit

@{
    ViewData["Title"] = "New";
}

<h2>New</h2>

<h4>Job Posting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div class="form-group">
                <label class="inplabel">Hospital</label>
                <select id="HospitalTitle_New" name="HospitalTitle_New">
                    @foreach (var hospital in Model.Hospitals)
                    {
                        <option value="@hospital.HospitalID">@hospital.HospitalTitle</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="inplabel">Department</label>
                <select id="DepartmentTitle_New" name="DepartmentTitle_New">
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.DepartmentID">@department.DepartmentTitle</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="inplabel">JobPosting Title</label>
                <input id="JobPostingTitle_New" name="JobPostingTitle_New" />
            </div>
            <div class="form-group">
                <label class="inplabel">Type</label>
                <input id="JobPostingType_New" name="JobPostingType_New" />
            </div>
            <div class="form-group">
                <label class="inplabel">Description</label>
                <input id="JobPostingDesc_New" name="JobPostingDesc_New" />
            </div>
            <div class="form-group">
                <label class="inplabel">Requirements</label>
                <input id="JobPostingReq_New" name="JobPostingReq_New" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

