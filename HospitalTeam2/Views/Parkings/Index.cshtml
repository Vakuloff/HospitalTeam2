@model IEnumerable<HospitalTeam2.Models.Parking>

@{
    ViewData["Title"] = "Index";
}
<div class="jumbotron">
    <div class="containerH">
        <h2>Registered Parkings</h2>
    </div>
</div>



<p class="btn btn-primary">
    <a asp-action="Create" style="color: white">Create New</a>
</p>
<div id="paginate">
    @ViewData["PaginationSummary"]
    @Html.ActionLink("Prev",
        "Index",
        new { pagenum= ((int)ViewData["pagenum"]-1)}
        )
    |
    @Html.ActionLink("Next",
        "Index",
        new { pagenum = ((int)ViewData["pagenum"] + 1) }
        )
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Car No.
            </th>
            <th>
                Purpose
            </th>
            <th>
                Contact
            </th>
            <th>
                Hospital
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.VisitorName
                </td>
                <td>
                    @item.VisitoCarNo
                </td>
                <td>
                    @item.ParkingPurpose
                </td>
                <td>
                    @item.ParkingContact
                </td>
                <td>
                    @item.hospital.HospitalTitle
                </td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.ParkingID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ParkingID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ParkingID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="paginate">
    @ViewData["PaginationSummary"]
    @Html.ActionLink("Prev",
        "Index",
        new { pagenum= ((int)ViewData["pagenum"]-1)}
        )
    |
    @Html.ActionLink("Next",
        "Index",
        new { pagenum = ((int)ViewData["pagenum"] + 1) }
        )
</div>
