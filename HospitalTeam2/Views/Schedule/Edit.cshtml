@model HospitalTeam2.Models.ViewModels.ScheduleEdit

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Schedule/Edit/@(Model.Schedules.ScheduleId)" method="post">
            <div class="form-group">
                <label class="control-label">Staff</label>
                <select class="form-control" name="StaffId">
                    @{
                        foreach (var staff in Model.Staffs)
                        {
                            string current = "false";
                            @if (staff.StaffId == Model.Schedules.Staff.StaffId)
                            {
                                current = "true";
                            }
                            <option value="@(staff.StaffId)">@(staff.StaffFirstName + " " + staff.StaffLastName)</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input class="form-control" type="date" value="@Model.Schedules.Date" name="Date_New" />
            </div>
            <div class="form-group">
                <label class="control-label">Start Shift</label>
                <input class="form-control" type="time" value="@Model.Schedules.StartShift" name="StartShift_New" />
            </div>
            <div class="form-group">
                <label class="control-label">End Shift</label>
                <input class="form-control" type="time" value="@Model.Schedules.EndShift" name="EndShift_New" />
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
